    font-weight: normal;
    font-style: normal;
}

.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}


.icon-search:before { content: "\e741"; }



/**search.wxss**/
.container{
  padding: 0 20rpx;
}
.search {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 20rpx ;
  width: 96%;
  height: 70rpx;
  border: 1px solid #e2e2e2;
  box-sizing: border-box;
}
.search-input {
  padding-left: 10px;
}
.search-btn {
  width:24%;
  height: 65rpx;
  border-radius: 0;
  
}
.search-btn::after {
  border: none;
  border-left: 1px solid #e2e2e2;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}
button[type=default][plain] {
  border: 1px solid #fff;	
}
button[type=default][plain].search-btn {
  border-left: 1px solid #e2e2e2;
}
.close {
  height: 65rpx;
  border-radius: 0; 
}
.close::after {
  border: none; 
}

.author {
  margin-top: 60rpx;
}
.list-item {
  margin: 10rpx;
}

.hot-search {
	margin-top: 20px;
}
.hot-search-text {
	margin-right: 10px;
}
